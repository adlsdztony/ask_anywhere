{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ask-anywhere",
  "version": "0.1.0",
  "identifier": "com.adlsdztony.ask-anywhere",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Ask Anywhere - Settings",
        "width": 900,
        "height": 700,
        "minWidth": 700,
        "minHeight": 500,
        "visible": true,
        "center": true,
        "resizable": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Main window capabilities",
          "windows": ["main", "popup"],
          "permissions": [
            "core:default",
            "core:window:allow-start-dragging",
            "core:window:allow-start-resize-dragging",
            "clipboard-manager:allow-write-text",
            "clipboard-manager:allow-read-text"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
